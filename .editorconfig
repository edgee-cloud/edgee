# top-most EditorConfig file
root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4
max_line_length = 150

[*.md]
trim_trailing_whitespace = false
indent_style = tab

[Makefile]
indent_size = 4
indent_style = tab

[*.yml]
indent_style = space
indent_size = 2
